<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/weather_forecast_item_color"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/aboutAppAboutInfoItemIconImageView"
        android:layout_width="@dimen/base_icon_width"
        android:layout_height="@dimen/base_icon_height"
        android:layout_marginStart="8dp"
        android:scaleType="center"
        android:tint="?attr/iconBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_info_outline" />

    <TextView
        android:id="@+id/aboutAppLibraryItemTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="?attr/titleText"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/aboutAppAboutInfoItemHintTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/aboutAppAboutInfoItemIconImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Title" />

    <TextView
        android:id="@+id/aboutAppAboutInfoItemHintTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="?attr/titleTextHint"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/aboutAppAboutInfoItemIconImageView"
        app:layout_constraintTop_toBottomOf="@+id/aboutAppLibraryItemTitleTextView"
        tools:text="Hint" />
</androidx.constraintlayout.widget.ConstraintLayout>