<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/weather_forecast_small_item_spacing"
        android:layout_marginTop="@dimen/weather_forecast_small_item_spacing"
        android:layout_marginEnd="@dimen/weather_forecast_small_item_spacing"
        android:gravity="center"
        android:paddingStart="@dimen/weather_forecast_small_item_spacing"
        android:paddingTop="@dimen/weather_forecast_small_item_spacing"
        android:paddingEnd="@dimen/weather_forecast_small_item_spacing">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/weatherSmallTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textColor="@android:color/white"
                android:textSize="@dimen/weather_forecast_small_temperature_text_size" />

            <TextView
                android:id="@+id/weatherSmallFeelsLikeTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textColor="@android:color/white"
                android:textSize="@dimen/weather_forecast_small_temperature_text_size" />

        </LinearLayout>

        <ImageView
            android:id="@+id/weatherSmallWeatherIcon"
            android:layout_width="@dimen/weather_forecast_small_icon_width"
            android:layout_height="@dimen/weather_forecast_small_icon_height"
            android:layout_marginStart="@dimen/weather_forecast_small_item_spacing"
            android:layout_marginEnd="@dimen/weather_forecast_small_item_spacing" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/weatherSmallHumidityIcon"
                    android:layout_width="@dimen/weather_forecast_small_splash_icons_width"
                    android:layout_height="@dimen/weather_forecast_small_splash_icons_height"
                    android:layout_marginEnd="@dimen/weather_forecast_small_icon_margin_end"
                    android:src="@drawable/wsymb2_droplet_fill"
                    android:tint="@android:color/white"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/weatherSmallHumidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/weather_forecast_small_small_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/weatherSmallWindSpeedIcon"
                    android:layout_width="@dimen/weather_forecast_small_splash_icons_width"
                    android:layout_height="@dimen/weather_forecast_small_splash_icons_height"
                    android:layout_marginEnd="@dimen/weather_forecast_small_icon_margin_end"
                    android:src="@drawable/wsymb2_wind_fill"
                    android:tint="@android:color/white"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/weatherSmallWindSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/weather_forecast_small_small_text" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/weatherSmallLocalityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/weather_forecast_small_small_text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/weatherSmallPrecipitationDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/weather_forecast_small_small_text" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/weatherSmallRiskForThunderIcon"
            android:layout_width="@dimen/weather_forecast_small_splash_icons_width"
            android:layout_height="@dimen/weather_forecast_small_splash_icons_height"
            android:layout_gravity="center_vertical"
            android:tint="@android:color/white" />

        <TextView
            android:id="@+id/weatherSmallRiskForThunder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/weather_forecast_small_small_text" />

    </LinearLayout>

</LinearLayout>